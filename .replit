modules = ["python-3.12", "nodejs-20"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Finance App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Finance Assistant"

[[workflows.workflow]]
name = "Finance App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd examples/personal_finance_agent && python finance_api.py & cd examples/personal_finance_agent/frontend && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Finance Assistant"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash /home/runner/workspace/examples/personal_finance_agent/run-app.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46543
externalPort = 3000
